# Application
NODE_ENV=development
PORT=3001
APP_NAME=MWU Kenya Platform
API_VERSION=v1

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=database_url
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mwukenyadb
DB_USER=postgres
DB_PASSWORD=your_password
DB_DIALECT=postgres
DB_LOGGING=true

# Redis Configuration
REDIS_URL=redis_url
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# External API Keys
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_ENVIRONMENT=sandbox
MPESA_PAYBILL_NUMBER=400200
MPESA_PASSKEY=your_mpesa_passkey
MPESA_CALLBACK_URL=your_callback_url

# Africa's Talking
AFRICAS_TALKING_API_KEY=your_africas_talking_api_key
AFRICAS_TALKING_USERNAME=your_africas_talking_username

# SHA Integration
SHA_API_BASE_URL=https://api.sha.gov.ke
SHA_API_KEY=your_sha_api_key

# Email Configuration
EMAIL_HOST=your_email_host
EMAIL_PORT=your_email_port || 587
EMAIL_USER=your_email_username
EMAIL_PASSWORD=your_email_password
EMAIL_SECURE=false
EMAIL_FROM=from_email
APP_NAME=Matatu Workers Union
APP_URL=frontend_app_url

# File Upload
MAX_FILE_SIZE=5MB
UPLOAD_PATH=uploads/

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# USSD Configuration
USSD_SERVICE_CODE=*384*8888#

# System Configuration
DEFAULT_GRACE_PERIOD_DAYS=3
MAX_ADVANCE_PAYMENT_DAYS=30
COMMISSION_PAYOUT_FREQUENCY=daily
SHA_TRANSFER_FREQUENCY=daily