# Application
NODE_ENV=development
PORT=3001
APP_NAME=MWU Kenya Platform
API_VERSION=v1

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173
API_URL=http://localhost:5000

# Database Configuration
# For production (Railway, Heroku, etc.), use DATABASE_URL
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@host:port/database

# For development, you can use individual variables (optional if DATABASE_URL is provided)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mwukenyadb
DB_USER=postgres
DB_PASSWORD=your_password
DB_DIALECT=postgres
DB_LOGGING=true

# Redis Configuration
REDIS_URL=redis_url
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# External API Keys
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_ENVIRONMENT=sandbox
MPESA_PAYBILL_NUMBER=400200
MPESA_PASSKEY=your_mpesa_passkey
MPESA_CALLBACK_URL=your_callback_url

# SMS Service Configuration
SMS_MODE=disabled                                    # Options: disabled, sandbox, production
AFRICAS_TALKING_SANDBOX_API_KEY=your-sandbox-api-key # Africa's Talking sandbox API key
AFRICAS_TALKING_API_KEY=your-production-api-key      # Africa's Talking production API key
AFRICAS_TALKING_USERNAME=your-username               # Africa's Talking username (for production)
AFRICAS_TALKING_SENDER_ID=MATATU_WORKERS_UNION       # Sender ID for SMS

# SHA Integration
SHA_API_BASE_URL=https://api.sha.gov.ke
SHA_API_KEY=your_sha_api_key

# Email Configuration
# Choose between 'smtp' or 'zeptomail'
EMAIL_MODE=zeptomail

# SMTP Configuration (when EMAIL_MODE=smtp)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# ZeptoMail Configuration (when EMAIL_MODE=zeptomail)
ZEPTOMAIL_API_KEY=example_mail_key
ZEPTOMAIL_FROM_EMAIL=noreply@mwukenya.co.ke

# File Upload
MAX_FILE_SIZE=5MB
UPLOAD_PATH=uploads/

# AWS Configuration (for S3 document storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mwu-kenya-documents

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15


# Frontend URL
FRONTEND_URL=http://localhost:5173

# System Configuration
DEFAULT_GRACE_PERIOD_DAYS=3
MAX_ADVANCE_PAYMENT_DAYS=30
COMMISSION_PAYOUT_FREQUENCY=daily
SHA_TRANSFER_FREQUENCY=daily