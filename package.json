{
  "name": "mwukenya-server",
  "version": "1.0.0",
  "description": "Backend for MWU Kenya - Financial Management & Payment Tracking System for Medical Covers",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/index.ts",
    "build": "tsc && tsc-alias",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "echo \"Tests skipped\" && exit 0",
    "db:create": "createdb mwu_kenya",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "ts-node -r tsconfig-paths/register src/seeders/index.ts",
    "db:seed:users": "ts-node -r tsconfig-paths/register src/seeders/userSeeder.ts",
    "db:seed:schemes": "ts-node -r tsconfig-paths/register src/seeders/medicalSchemeSeeder.ts",
    "db:reset": "npx sequelize-cli db:migrate:undo all && npm run db:migrate && npm run db:seed",
    "logs:clear": "rm -rf logs/*",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "payments",
    "medical",
    "insurance",
    "tracking",
    "financial"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/aws-sdk": "^0.0.42",
    "@types/axios": "^0.9.36",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "^10.0.0",
    "africastalking": "^0.7.3",
    "aws-sdk": "^2.1692.0",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "framer-motion": "^12.5.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.6.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "pg": "^8.14.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.6",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.10",
    "@types/nodemailer": "^6.4.17",
    "@types/sequelize": "^4.28.20",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.36.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.9",
    "sequelize-cli": "^6.6.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "umzug": "^3.8.2"
  }
}
